password = input("Enter a password to check:")
score = 0
length = len(password)
if length >= 8:
    score += 1
has_upper = False
has_lower = False
has_number = False
has_special = False
special_chars = "!@#$%^&*"
for char in password:
    if char.isupper():
        has_upper = True
    else if char.islower():
        has_lower = True
    else if char.isdigit():
        has_number = True
    else if char in special_chars:
        has_special = True
if has_upper: score += 1
if has_lower: score += 1
if has_number: score += 1
if has_special: score += 1
print("--- Results ---")
if score <= 2:
    print("Strength: Weak")
else if score <= 4:
    print("Strength: Medium")
else:
    print("Strength: Strong")
print(f"Total Points: {score} out of 5")
